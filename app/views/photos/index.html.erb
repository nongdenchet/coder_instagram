<nav>
  <div class="nav-wrapper">
    <a href="#" class="brand-logo" style="margin-left: 16">Instagram</a>
    <ul id="nav-mobile" class="right Instagram-on-med-and-down">
    </ul>
  </div>
</nav>
<div class="container">
  <% @photos.each do |photo| %>
      <div class="card" style="width: 70%">
        <div class="card-image waves-effect waves-block waves-light">
          <%= image_tag(photo.url, class: "activator", width: "300", height: "400") %>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= photo.username %></span>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
          <p>Caption: <%= photo.caption %></p>
          <% photo.comments.each do |comment| %>
              <h5>Name: <%= comment.name %></h5>
              <p>Comment: <%= comment.description %></p>
          <% end %>
        </div>
      </div>
  <% end %>
  <%= paginate @photos %>
</div>