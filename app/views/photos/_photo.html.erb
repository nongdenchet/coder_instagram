<div class="card">
  <div class="card-image waves-effect waves-block waves-light">
    <%= image_tag(photo.url, class: "activator", width: "300", height: "600") %>
  </div>
  <div class="card-content">
    <span class="card-title activator grey-text text-darken-4"><%= photo.username %></span>
  </div>
  <div class="card-reveal">
    <span class="card-title grey-text text-darken-4"><%= photo.caption %><i class="material-icons right">close</i></span>

    <!-- Váº½ comments -->
    <% photo.comments.each do |comment| %>
        <h5><%= comment.name %></h5>
        <p><%= comment.description %></p>
    <% end %>
  </div>
</div>